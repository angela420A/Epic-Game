@model IEnumerable<Epic_Game.ViewModels.SearchViewModel>
@{
    ViewBag.Title = "Search";
}

@section topCSS{

    <link href="~/Assets/css/EpicGameBrowse.css" rel="stylesheet" />
}

@section endJS{
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/velocity/0.2.1/jquery.velocity.min.js'></script>
    <script src="~/Assets/Js/EpicGameBrowse.js"></script>
}

<div class="container">
    <div class="row _stickyTop">
        <div class="col-12">
            <div class="NavListArea">
                <div class="NavList">
                    <input type="checkbox" id="checkControl" class="check_control">
                    <label for="checkControl" class="checkBoxlabel">
                        Browse<i class="fas fa-chevron-down"></i>
                    </label>
                    <div class="div_itemlist">
                        <ul class="itemList">
                            <li><a href="@Url.Action("Index","Home")">Discover</a></li>
                            <li><a href="#">Browse</a></li>
                        </ul>
                    </div>
                    <nav class="navbar navbar-dark">
                        <form class="form-inline">
                            <input class="searchArea form-control  bg-outline-dark col-12 col-xl-12" type="search" placeholder="搜尋"
                                   aria-label="Search" />
                            <button class="searchbtn" disabled>
                                <svg class="bi bi-search" width="1em"
                                     height="1em" viewBox="0 0 16 16" fill="currentColor"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M10.442 10.442a1 1 0 011.415 0l3.85 3.85a1 1 0 01-1.414 1.415l-3.85-3.85a1 1 0 010-1.415z"
                                          clip-rule="evenodd" />
                                    <path fill-rule="evenodd"
                                          d="M6.5 12a5.5 5.5 0 100-11 5.5 5.5 0 000 11zM13 6.5a6.5 6.5 0 11-13 0 6.5 6.5 0 0113 0z"
                                          clip-rule="evenodd" />
                                </svg>
                            </button>
                        </form>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="EpicGameBrowse">
            <div class="EpicGameTitle">
                <div class="wishList-Controll">
                    <div class="sortArea">
                        <div class="sortLabelText">
                            <p class="sort_label">Sort By:</p>
                        </div>
                        <div class="sortSelectArea">
                            <input type="checkbox" id="sort_control" class="sort_checked">
                            <label for="sort_control" class="sortLabel">
                                <p>Release Date</p>
                                <i class="fas fa-chevron-up"></i>
                            </label>
                            <ul class="sort_list">
                                <li>
                                    <button class="OrderBtn" id="OrderByDate">
                                        <p>Release Date</p>
                                    </button>
                                </li>
                                <li>
                                    <button class="OrderBtn" id="OrderByAlphabetical">
                                        <p>Alphabetical</p>
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="col-12 ">
                        <div class="new_mode_4">
                            <ul id="search_ul" class="mode_4_ul">
                                @foreach (var search in Model)
                                {
                                    <li class="col-6 col-md-3 mode_4_li">
                                        <a href="/Product/@search.ProductID">
                                            <div class="mode_4_img-2">
                                                <div class="imgArea" style="background-image: url('@search.Url');"></div>
                                            </div>
                                            <div class="mode_4_text">
                                                <h4>@search.ProductName</h4>
                                                <p>@search.Developer | @search.Publisher</p>
                                                <div class="mode_5_text_discount">
                                                    <h4>TW$@decimal.Round(search.Price, 0)</h4>
                                                    @if (search.Discount == 0)
                                                    {
                                                        <h3>free</h3>
                                                    }
                                                    else if (search.Discount != 1)
                                                    {
                                                        <h3>@decimal.Round(search.Discount * 100)%</h3>
                                                    }
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                }
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
            <div class="mvc">
                <section class="content gametyp">
                    <ul class="list">
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="1">
                                Action
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="2">
                                Adventure
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="4">
                                Editors
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="8">
                                Puzzle
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="16">
                                Racing
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="32">
                                RPG
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="64">
                                Shooter
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="128">
                                Strategy
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="256">
                                Survival
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="512">
                                ControllerSupport
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="1024">
                                CoOp
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="2048">
                                SinglePlayer
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="4096">
                                Multiplayer
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="8192">
                                Windows
                            </label>
                        </li>
                        <li class="list__item">
                            <label class="label--checkbox">
                                <input id="checkbox" type="checkbox" class="checkbox" value="16384">
                                MacOS
                            </label>
                        </li>
                    </ul>
                </section>
            </div>


        </div>
    </div>
</div>

