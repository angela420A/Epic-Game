@model Epic_Game.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "忘記密碼?";
    Layout = "";
}


<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <link href="~/Assets/css/ForgotPassword/ForgotPassword.css" rel="stylesheet" />
    <title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>
    <link rel="icon" href="~/Assets/images/Layout/logo.png" type="image/x-icon">

    
</head>
<body>

    <div class="forgot-root">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal forgot-form text-center", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="forgot-title">
                <div class="f-title-img">
                    <img src="~/Assets/images/Layout/logo.png" alt="">
                </div>
                <div class="f-title-text">
                    <h3>Forgot Your Password ?</h3>
                </div>
            </div>

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="forgot-input">
                <div class="f-input-text text-left">
                    <div class="col-12 col-md-12 col-lg-12">
                        <label for="forgotEmail" class="f-i-text-label">Please enter your Email Address : </label>
                    </div>
                    <div class="col-12 col-md-12 col-lg-12">
                        @Html.TextBoxFor(m => m.Email, new { @id = "forgotEmail", @class = "f-i-text-input", @placeholder = "  *Your Email" })
                        @*<input type="email" id="forgotEmail" class="f-i-text-input" placeholder="  *Your Email">*@
                    </div>
                </div>
            </div>

            <div class="forgot-enter">
                <div class="f-enter-btn">
                    <input type="submit" class="f-e-btn" value="Send Link By Email">
                </div>
            </div>
        }
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>


