@model Epic_Game.ViewModels.ProductViewModel
@{
    ViewBag.Title = "Index";
}
@section topCSS{
    <link href="~/Assets/css/product_style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/css/swiper.min.css" />
}

@section topJS{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/js/swiper.min.js"></script>
}

@section endJS{
    <script src="~/Assets/Js/product_js.js"></script>
}
<!-- 導覽列------------------------------- -->
<div class="container-fluid shopback">
    <div class="row">
        <div class="col" style="padding:0">
            <div class="NavListArea">
                <div class="NavList">
                    <input type="checkbox" id="checkControl" class="check_control">
                    <label for="checkControl" class="checkBoxlabel">
                        @Model.PD_ProductName
                        <i class="fas fa-chevron-down"></i>
                    </label>
                    <div class="div_itemlist">
                        <ul class="itemList">
                            <li><a href="@Url.Action("Index","Home")">Back to Store</a></li>
                            <li>@Model.PD_ProductName</li>
                        </ul>
                    </div>
                    <nav class="navbar navbar-dark">
                        <form class="form-inline">
                            <input class="form-control  bg-outline-dark col-12 col-xl-12" type="search" placeholder="Search"
                                   aria-label="Search" />
                            <button class="searchbtn" disabled>
                                <svg class="bi bi-search" width="1em"
                                     height="1em" viewBox="0 0 16 16" fill="currentColor"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M10.442 10.442a1 1 0 011.415 0l3.85 3.85a1 1 0 01-1.414 1.415l-3.85-3.85a1 1 0 010-1.415z"
                                          clip-rule="evenodd" />
                                    <path fill-rule="evenodd"
                                          d="M6.5 12a5.5 5.5 0 100-11 5.5 5.5 0 000 11zM13 6.5a6.5 6.5 0 11-13 0 6.5 6.5 0 0113 0z"
                                          clip-rule="evenodd" />
                                </svg>
                            </button>
                        </form>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- 影片------------------------------- -->
<div class="swiper-container">
    <div class="swiper-wrapper">

        @foreach (var swiper in Model.PD_image)
        {
            if (swiper.Image_Location == 2)
            {
                @Html.Partial("_Swiper", swiper)
            }
        }
    </div>
    <div class="swiper-pagination"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
</div>

<!-- 產品描述------------------------------- -->
<div class="container allblock" id="game_pic">
    <div class="row">
        <div class="col-12 col-md-6 col-xl-3 pic_img">
            <img src="@Model.PD_image.FirstOrDefault(x => x.Image_Location == 1).Image_URL" alt="" class="d-block  w-100 pic data-pic">

        </div>
        <div class="col-12 col-md-6 col-xl-6">
            <p class="game_pic_text">
                @Model.PD_Title
            </p>
        </div>
        <div class="col-12 col-md-12 col-xl-3" id="game_pic_price">
            <div class="game_pic_know_rightrow">
                <div class="game_pic_pricewrapper">
                    <div class="game_pic_price">
                        <span class="price_original" style="color: #e7e7e7;">@Model.PD_Price</span>
                    </div>
                </div>
                <div class="game_pic_btn_div">
                    <div class="game_pic_btn_left">
                        <a href="@Url.Action("Index","Pay")" type="button" class="game_pic_give" style="text-decoration: none;">
                            <span style="font-size: 16px;">BUY NOW</span>
                        </a>
                        <div class="game_pic_btn_right">
                            <div class="game_pic_btn_container">
                                <div class="game_pic_btn_content">
                                    <button class="game_pic_btn_love">
                                        <span>
                                            <i class="far fa-heart"
                                               style="font-size: 15px; padding: 0 5px;"></i>
                                        </span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 關於遊戲------------------------------- -->
<div class="container allblock" id="aboutgame">
    <div class="row">
        <div class="col-12 col-xl-3">
            <h3 class="title_name">About Game</h3>
        </div>
        <div class="col-12 col-xl-9">
            <div class="aboutgame_tag">
                <div class="col-6 col-md-4 aboutgame_about">
                    <span>Developer</span>
                    <p>@Model.PD_Developer</p>
                </div>
                <div class="col-6 col-md-4 aboutgame_about">
                    <span>Publisher</span>
                    <p>@Model.PD_Publisher</p>
                </div>
                <div class="col-6 col-md-4 aboutgame_about">
                    <span>Release Date</span>
                    <p>@Model.PD_ReleaseDate</p>
                </div>
                <div class="col-6 col-md-4 aboutgame_about">
                    <span>Tages</span>
                    <p>Casual,Strategy,Puzzle</p>
                </div>
                <div class="col-6 col-md-4 aboutgame_about">
                    <span>Rating</span>
                    <p>@Model.PD_AgeRestriction</p>
                </div>
                <div class="col-6 col-md-4 aboutgame_about">
                    <span>Platform</span>
                    <p><i class="@Model.OS"></i></p>
                </div>
            </div>
            <div class="aboutgame_content ">
                <a href="#show" class="show btn" id="show">SHOW MORE</a>
                <a href="#hide" class="hide btn" id="hide">SHOW LESS</a>
                <div class="panel">
                    @Model.PD_Description

                    <div class="collapse_pic">
                        <div class="col-12 col-md-6">
                            <img src="~/Assets/images/EpicGameProduct/borderlands_add1.jpg" alt="">
                        </div>
                        <div class="col-12 col-md-6">
                            <img src="~/Assets/images/EpicGameProduct/borderlands_add2.jpg" alt="">
                        </div>
                    </div>

                </div>
                <div class="fade"></div>
            </div>
        </div>
    </div>
</div>
<!-- 版本------------------------------- -->
@Html.Partial("_Editions")


<!-- 附加------------------------------- -->
@Html.Partial("_AddOns")

<!-- 追蹤------------------------------- -->
@Html.Partial("_Trackus", Model.SM)

<!-- 評論------------------------------- -->
@Html.Partial("_Comments")


<!--規格 ------------------- -->
<div class="container allblock" id="specification">
    <div class="row">
        <div class="col-12 col-xl-3">
            <h3 class="title_name">Specification</h3>
        </div>
        <div class="col-12 col-xl-9">
            <div class="specification_table">
                <table>
                    <div class="title_div">
                        <div class="title_div_div" id="Windows">
                            <span class="span_text">WINDOWS</span>
                        </div>
                        <div class="title_div_div" id="MACOS">
                            <span class="span_text">MAC OS</span>
                        </div>
                    </div>
                    <tr>
                        <td>
                            <div class="recup"><span class="big_title_span">Minimum</span></div>
                        </td>
                        <td>
                            <div class="rec"><span class="big_title_span">Recommended</span></div>
                        </td>
                    </tr>
                    <tr>
                        <td class="recup">
                            <div class="small_title_span"><span>OS</span></div>
                            <span class="span_text" id="minos">Windows Vista, Windows 7, Windows 10</span>
                        </td>
                        <td class="rec">
                            <div class="small_title_span" id="recos"><span>OS</span></div>
                            <span class="span_text">Windows Vista,  Windows 10</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="recup">
                            <div class="small_title_span"><span>Processor</span></div>
                            <span class="span_text" id="mincpu">Intel i3</span>
                        </td>
                        <td class="rec">
                            <div class="small_title_span"><span>Processor</span></div>
                            <span class="span_text" id="reccpu">Intel i5</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="recup">
                            <div class="small_title_span"><span>Memory</span></div>
                            <span class="span_text" id="minram">4 GB RAM</span>
                        </td>
                        <td class="rec">
                            <div class="small_title_span"><span>Memory</span></div>
                            <span class="span_text" id="recram">8 GB RAM</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="recup">
                            <div class="small_title_span"><span>Storage</span></div>
                            <span class="span_text" id="minhdd">500 MB available space</span>
                        </td>
                        <td class="rec">
                            <div class="small_title_span"><span>Storage</span></div>
                            <span class="span_text" id="rechdd">770 MB available space</span>
                        </td>
                    </tr>
                </table>
                <div>
                    <div class="small_title_span"><span>Languages Supported</span></div>
                    <ul>
                        <li class="li_text">
                            @Model.PD_Languages
                        </li>
                    </ul>
                </div>
            </div>
            <div class="privacy_policy">
                <span class="privacy_policy_content">
                    @Model.PD_Privary
                </span>
                <a href="@Model.PD_PrivaryUrl" class="privacy_policy_a">
                    <span class="privacy_policy_title">Privacy Policy</span>
                </a>
            </div>
        </div>
    </div>
</div>
