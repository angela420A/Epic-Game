@model IEnumerable<Epic_Game.ViewModels.TransactionHistoryViewModel>
@{
    ViewBag.Title = "History";
}

@section topCSS{
    <link href="~/Assets/css/UserAccount/account_Layout.css" rel="stylesheet" />
    <link href="~/Assets/css/UserAccount/account_history.css" rel="stylesheet" />
}

@section endJS{
    <script src="https://kit.fontawesome.com/05f083f1a4.js" crossorigin="anonymous"></script>
}

<div class="container">
    <div class="row">
        @Html.Partial("_NavListPartial")
        <div class="col-lg-9 col-md-12">
            <!-- Account Management Contents -->

            <div class="account-history-container">
                <div class="row pageTitleSection">
                    <div class="col">
                        <div class="textArea">
                            <p class="textTitle">PAYMENT HISTORY</p>
                            <p class="text-gray">View your account payment details and transactions.</p>
                        </div>
                    </div>
                </div>
                <div class="row historySelectionSection nextSection">
                    <div class="historySelectionArea formArea col">
                        <select name="" id="historyType" class="historySelection">
                            <option value="">Payment History</option>
                            <option value="">Code Redemption History</option>
                            <option value="">V-Buck Card Redemption History</option>
                        </select>
                    </div>
                </div>
                <div class="historyTableSection">
                    <div class="col">
                        <table class="historyTable">
                            <thead>
                                <tr>
                                    <th>puchase date</th>
                                    <th>description</th>
                                    <th>payment</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count() <= 0)
                                {
                                    <tr class="text-gray">
                                        <td colspan="3">You have no transaction records.</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var item in Model)
                                    {
                                        @Html.Partial("_TransactionHistoryPartial", item)
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>