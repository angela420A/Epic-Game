
@model IEnumerable<Epic_Game_Backstage.ViewModels.OrderManageViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<p>
    @Html.ActionLink("顯示全部", "ordersearchsort")
</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>order</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div class="form-group">

            <text>UserID</text>@Html.RadioButton("option", "UserID", htmlAttributes: new { @class = "Radioclass" })
        <text>ProductID</text>@Html.RadioButton("option", "ProductID", htmlAttributes: new { @class = "Radioclass" })
            <text>Date</text>@Html.RadioButton("option", "Date", htmlAttributes: new { @class = "Radioclass" })
        <text>Payment</text>@Html.RadioButton("option", "Payment", htmlAttributes: new { @class = "Radioclass" })
            <p>
                @Html.Label("search")@Html.TextBox("search")
            </p>
            <p><input type="submit" value="查詢" class="btn btn-primary" /></p>
        </div>
    </div>

    if (Model != null)
    {
        @Html.Partial("OrderPartial", Model);

    }
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

