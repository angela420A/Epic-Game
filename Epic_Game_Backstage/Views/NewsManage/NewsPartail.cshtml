@model IEnumerable<Epic_Game_Backstage.ViewModels.NewsManageViewModel>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Author", "searchsort", new { sort = "Author", nowsort = ViewBag.Nowsort })
        </th>
        <th>
            @Html.ActionLink("NewsTitle", "searchsort", new { sort = "NewsTitle", nowsort = ViewBag.Nowsort })
        </th>
        <th>
            @Html.ActionLink("Date", "searchsort", new { sort = "Date", nowsort = ViewBag.Nowsort })
        </th>
        <th>
            @Html.ActionLink("Description", "searchsort", new { sort = "Description", nowsort = ViewBag.Nowsort })
        </th>
        <th>
            @Html.ActionLink("NewsImg", "searchsort", new { sort = "NewsImg", nowsort = ViewBag.Nowsort })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsImg)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.NewsID }) |
                @Html.ActionLink("Details", "Details", new { id = item.NewsID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.NewsID })
            </td>
        </tr>
    }

</table>



