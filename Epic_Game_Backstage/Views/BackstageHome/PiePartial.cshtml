
@{
    ViewBag.Title = "Pie";
    var Piearray = Json.Encode(Model.PieData);
}

<script>
    ctx = document.getElementById('chartEmail').getContext("2d");

    myChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: [1, 2, 3],
            datasets: [{
                label: "Emails",
                pointRadius: 0,
                pointHoverRadius: 0,
                backgroundColor: [
                    '#e3e3e3',
                    '#4acccd',
                    '#fcc468',
                    '#ef8157',
                    '#81D7A7'
                ],
                borderWidth: 0,
                data: @Piearray
            }]
        },

        options: {

            legend: {
                display: false
            },

            pieceLabel: {
                render: 'percentage',
                fontColor: ['white'],
                precision: 2
            },

            tooltips: {
                enabled: false
            },

            scales: {
                yAxes: [{

                    ticks: {
                        display: false
                    },
                    gridLines: {
                        drawBorder: false,
                        zeroLineColor: "transparent",
                        color: 'rgba(255,255,255,0.05)'
                    }

                }],

                xAxes: [{
                    barPercentage: 1.6,
                    gridLines: {
                        drawBorder: false,
                        color: 'rgba(255,255,255,0.1)',
                        zeroLineColor: "transparent"
                    },
                    ticks: {
                        display: false,
                    }
                }]
            },
        }
    });
</script>

